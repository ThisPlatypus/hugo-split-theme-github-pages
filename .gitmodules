[submodule "themes/hugo-split-theme"]
    path = themes/hugo-split-theme
    url = https://github.com/splitbrain/hugo-split-theme.git
baseURL = "https://example.com"
languageCode = "en-US"
title = "Split - HTML Template Demo"
theme = "hugo-split-theme"
disableKinds = ["section", "taxonomy", "RSS", "sitemap"]
disableHugoGeneratorInject = true

# Local preview mode
relativeURLs = true
uglyURLs = true

# Copyright
copyright = "&copy;2024 Your Name"

[params]
  author = "Jenny Jones"
  description = "Split is a centrally-divided layout for a professional online presence with a big image or video left with alongside content."
  shareImage = "images/social.jpg"
  twitterHandle = "onepagelove"
  licensed = false
  favicon = "favicon.ico"

  [params.visual]
    [params.visual.image]
      enable = true
      file = "images/background.jpg"
      position = "center center"